void setup() {
  // Initialize the LED pin as an output:
  pinMode(ledPin, OUTPUT);
  // Initialize the pushbutton pin as an input:
  pinMode(buttonPin, INPUT);
  pinMode(txPin, OUTPUT);
  Serial.begin(9600);
}

void loop() {
  // Read the state of the pushbutton value:
  int reading = digitalRead(buttonPin);

  // Check if the button state has changed since the last check
  if (reading != lastButtonState) {
    // Reset the debounce timer
    lastDebounceTime = millis();
  }

  // Check if the button state has remained stable for the debounce delay
  if ((millis() - lastDebounceTime) > debounceDelay) {
    // If the reading is different from the current button state
    if (reading != buttonState) {
      buttonState = reading;

      // If the button state is HIGH (pressed)
      if (buttonState == HIGH) {
        // Increment counter and print the value
        Serial.printf("Pressed: %d\n", counter++);
        // Turn on the LED
        digitalWrite(ledPin, HIGH);
        for (int i = 0; i < 544; i++) {
            digitalWrite(txPin, buffer[i]);
            delayMicroseconds(500); // Adjust this value to change the frequency (500 microseconds for 1 kHz)
          }
        digitalWrite(txPin, HIGH);
      } else {
        // Turn off the LED
        digitalWrite(ledPin, LOW);
      }
    }
  }

  // Update lastButtonState with the current buttonState
  lastButtonState = reading;
}